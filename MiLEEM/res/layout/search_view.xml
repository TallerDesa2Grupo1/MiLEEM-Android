<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="ar.uba.fi.mileem.MainActivity" >

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/pull_refresh_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:cacheColorHint="#00000000"
        android:divider="#cccccc"
        android:dividerHeight="1dp"
        android:fadingEdge="none"
        android:fastScrollEnabled="false"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"
        android:showDividers="middle|end"
        android:smoothScrollbar="true"
        ptr:ptrHeaderSubTextColor="@color/apptheme_color"
        ptr:ptrHeaderTextColor="@color/apptheme_color" />

<RelativeLayout
    android:id="@+id/emptyLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="5dp"
    android:gravity="top" >
    
<ar.uba.fi.mileem.custom.CustomTextView
    android:id="@+id/emptyText"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:padding="5dp"
    android:text="@string/pull_to_refresh_from_bottom_refreshing_label"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:textColor="@color/apptheme_color" />

</RelativeLayout>    
</RelativeLayout>
