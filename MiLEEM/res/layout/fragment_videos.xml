<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
         xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

  
 

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <FrameLayout
                    android:id="@+id/video_frame"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <ar.uba.fi.mileem.custom.FullWidthImageButton
                        android:id="@+id/videoButton"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:padding="0dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/placeholder" />

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:clickable="false"
                        android:src="@drawable/play" />

                </FrameLayout>

                <ar.uba.fi.mileem.custom.CustomTextView
                    android:id="@+id/no_video_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/feed_item_margin"
                    android:gravity="center_horizontal"
                    android:text="@string/cargando"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/apptheme_color"
                    android:textColorLink="@color/apptheme_color" />

  </FrameLayout>

    </ScrollView>
