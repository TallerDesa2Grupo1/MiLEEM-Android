<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/static_map"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/header_footer_top_bottom_padding"
            android:background="@drawable/bg_parent_rounded_corner"
            android:orientation="vertical"
            android:paddingBottom="@dimen/feed_item_padding_top_bottom"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/feed_item_padding_top_bottom" >

            <ar.uba.fi.mileem.custom.CustomTextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/header_footer_top_bottom_padding"
                android:gravity="center_horizontal"
                android:text="@string/detalles_generales"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/apptheme_color" />
            <ar.uba.fi.mileem.custom.CustomLabelValue
                android:id="@+id/operation_type"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                custom:label="@string/tipo_operacion" />

            <View style="@style/Divider" />

            <ar.uba.fi.mileem.custom.CustomLabelValue
                android:id="@+id/property_type"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                custom:label="@string/tipo_propiedad" />

            <View style="@style/Divider" />

            <ar.uba.fi.mileem.custom.CustomLabelValue
                android:id="@+id/address"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                custom:label="@string/direccion" />

            <View style="@style/Divider" />

            <ar.uba.fi.mileem.custom.CustomLabelValue
                android:id="@+id/neighborhood"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                custom:label="@string/barrio" />
           
            <View style="@style/Divider" />

            <ar.uba.fi.mileem.custom.CustomLabelValue
                android:id="@+id/publication_date"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                custom:label="@string/fecha_pub" />
           
            <View style="@style/Divider" />

            <ar.uba.fi.mileem.custom.CustomLabelValue
                android:id="@+id/price"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                custom:label="@string/precio" />

          
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="@dimen/header_footer_top_bottom_padding"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/header_footer_top_bottom_padding"
            android:background="@drawable/bg_parent_rounded_corner"
            android:orientation="vertical"
            android:paddingBottom="@dimen/feed_item_padding_top_bottom"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/feed_item_padding_top_bottom" >

              <ar.uba.fi.mileem.custom.CustomTextView
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="@dimen/header_footer_top_bottom_padding"
                  android:gravity="center_horizontal"
                  android:text="@string/detalles_inmueble"
                  android:textAppearance="?android:attr/textAppearanceLarge"
                  android:textColor="@color/apptheme_color" />

            <ar.uba.fi.mileem.custom.CustomLabelValue
                android:id="@+id/covered_area"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                custom:label="@string/sup_cubierta" />

            <View style="@style/Divider" />

            <ar.uba.fi.mileem.custom.CustomLabelValue
                android:id="@+id/total_area"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                custom:label="@string/sup_total" />
              
            <View style="@style/Divider" />

            <ar.uba.fi.mileem.custom.CustomLabelValue
                android:id="@+id/rooms"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                custom:label="@string/cant_ambientes" />
              
            <View style="@style/Divider" />

            <ar.uba.fi.mileem.custom.CustomLabelValue
                android:id="@+id/expenses"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                custom:label="@string/expensas" />
              
            <View style="@style/Divider" />

            <ar.uba.fi.mileem.custom.CustomLabelValue
                android:id="@+id/age"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                custom:label="@string/antiguedad" />
         
        </LinearLayout>

        <LinearLayout
            android:id="@+id/check_boxes_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:background="@drawable/bg_parent_rounded_corner"
            android:orientation="vertical"
            android:paddingBottom="@dimen/feed_item_padding_top_bottom"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/feed_item_padding_top_bottom" >

            <ar.uba.fi.mileem.custom.CustomTextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/header_footer_top_bottom_padding"
                android:gravity="center_horizontal"
                android:text="@string/detalles_servicios"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/apptheme_color" />

        </LinearLayout>
        
          <LinearLayout
            android:id="@+id/description_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:background="@drawable/bg_parent_rounded_corner"
            android:orientation="vertical"
            android:paddingBottom="@dimen/feed_item_padding_top_bottom"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/feed_item_padding_top_bottom" >

            <ar.uba.fi.mileem.custom.CustomTextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/header_footer_top_bottom_padding"
                android:gravity="center_horizontal"
                android:text="@string/descripcion"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/apptheme_color" />

            <ar.uba.fi.mileem.custom.CustomTextView
                android:id="@+id/descripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </LinearLayout>
        
    </LinearLayout>

</ScrollView>