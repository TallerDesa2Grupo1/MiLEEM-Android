<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/static_map"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder" />

        <ar.uba.fi.mileem.custom.CustomTextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Detalles de la Publicación"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:background="@drawable/bg_parent_rounded_corner"
            android:orientation="vertical"
            android:paddingBottom="@dimen/feed_item_padding_top_bottom"
            android:paddingTop="@dimen/feed_item_padding_top_bottom" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ar.uba.fi.mileem.custom.CustomTextView
                    android:id="@+id/operation_type"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:gravity="left"
                    android:text="Tipo de Operación:-"
                    android:textSize="15dp" />

                <ar.uba.fi.mileem.custom.CustomTextView
                    android:id="@+id/property_type"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/operation_type"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:gravity="left"
                    android:text="Tipo de Propiedad:-"
                    android:textSize="15dp" />

                <ar.uba.fi.mileem.custom.CustomTextView
                    android:id="@+id/address"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/property_type"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:gravity="left"
                    android:text="Dirección:-"
                    android:textSize="15dp" />

                <ar.uba.fi.mileem.custom.CustomTextView
                    android:id="@+id/neighborhood"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/address"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:gravity="left"
                    android:text="Barrio:-"
                    android:textSize="15dp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:background="@drawable/bg_parent_rounded_corner"
            android:orientation="vertical"
            android:paddingBottom="@dimen/feed_item_padding_top_bottom" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/feed_item_padding_top_bottom" >

                <ar.uba.fi.mileem.custom.CustomTextView
                    android:id="@+id/covered_area"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Superficie Cubierta:-"
                    android:textSize="15dp" />

                <ar.uba.fi.mileem.custom.CustomTextView
                    android:id="@+id/total_area"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/covered_area"
                    android:gravity="center"
                    android:text="Superficie Total:-"
                    android:textSize="15dp" />

                <ar.uba.fi.mileem.custom.CustomTextView
                    android:id="@+id/rooms"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/total_area"
                    android:gravity="center"
                    android:text="Ambientes:-"
                    android:textSize="15dp" />

                <ar.uba.fi.mileem.custom.CustomTextView
                    android:id="@+id/expenses"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rooms"
                    android:gravity="center"
                    android:text="Expensas:-"
                    android:textSize="15dp" />

                <ar.uba.fi.mileem.custom.CustomTextView
                    android:id="@+id/age"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/expenses"
                    android:gravity="center"
                    android:text="Antigüedad:-"
                    android:textSize="15dp" />

                <ar.uba.fi.mileem.custom.CustomTextView
                    android:id="@+id/price"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/age"
                    android:gravity="center"
                    android:text="Precio:-"
                    android:textSize="15dp" />

                <ar.uba.fi.mileem.custom.CustomTextView
                    android:id="@+id/publication_date"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/price"
                    android:gravity="center"
                    android:text="Fecha de Publicación:-"
                    android:textSize="15dp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/check_boxes_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:background="@drawable/bg_parent_rounded_corner"
            android:orientation="vertical"
            android:paddingBottom="@dimen/feed_item_padding_top_bottom"
    		android:gravity="center"
    		android:layout_gravity="center"  >

         </LinearLayout>
    </LinearLayout>

</ScrollView>